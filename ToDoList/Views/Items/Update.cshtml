@using ToDoList.Models
<h1>To Do List</h1>
<hr />
<h2>@Model.GetDescription()</h2>
<form action="/items/@Model.GetId()/update" method="post">
    <label for="name">Revised list item:</label>
    <input type="text" name="newname" value="@Model.GetDescription()">
    <button type="submit">Edit</button>
</form>
<h3>Category: @Category.Find(@Model.GetCategoryId()).GetName()</h3>
<form action="/items/@Model.GetId()/delete" method="post">
    <button type="submit">Delete this item</button>
</form>
<h4><a href="/items">Return home</a></h4>
